# API Keys - Copy this file to .env and add your actual keys

# Web of Science API Key
WOS_API_KEY=your_web_of_science_api_key_here

# Scopus API Key  
SCOPUS_API_KEY=your_scopus_api_key_here

# Zotero API Configuration
ZOTERO_API_KEY=your_zotero_api_key_here
ZOTERO_LIBRARY_ID=your_zotero_library_id_here
ZOTERO_LIBRARY_TYPE=group

# Zotero Mode: Set to 'true' to use local Zotero database, 'false' for online API
ZOTERO_USE_LOCAL=false

# Optional: Science Direct API Key
SCIENCE_DIRECT_API_KEY=your_science_direct_api_key_here